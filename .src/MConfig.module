Public Sub get(nome As String, Optional valorpadrao As Variant) As Variant
  
  Return Settings[nome, valorpadrao]
  
End

Public Sub set(nome As String, valor As Variant)
  
  Settings[nome] = valor
  Settings.Save()
  
End


